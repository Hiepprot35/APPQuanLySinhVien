<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".student.AddStudentActivity">

        <TextView
            android:id="@+id/textView3_update"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#2196F3"
            android:gravity="center"
            android:text="THÔNG TIN SINH VIÊN"
            android:textAlignment="center"
            android:textColor="#FFEB3B"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/img_avatar_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/edtmaSV_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20dp"
                android:hint="Nhập mã sinh viên"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/edtnameSV_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20dp"
                android:hint="Nhập họ tên sinh viên"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/edtbirthday_user"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="1 1 2002"
                android:ems="10"
                android:inputType="text"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                style="?android:spinnerStyle"
                />


            <TextView
                android:id="@+id/edtphone_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20dp"
                android:hint="Nhập số điện thoại"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/edtEmailSV_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20dp"
                android:hint="Nhập email"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/edtcountry_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textSize="20dp"
                android:hint="Nhập quê quán"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/edtgender_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giới tính"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/txt_major_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngành: "
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_class_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp: "
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn_user_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@null"
                android:text="Đổi mật khẩu"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
